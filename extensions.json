{
  // See http://go.microsoft.com/fwlink/?LinkId=827846
  // for the documentation about the extensions.json format
  "recommendations": [
    // Beautiful color theme
    "yummygum.city-lights-theme",

    // Pretty icons to go with the color theme
    "yummygum.city-lights-icon-vsc",

    // Prettier to clean code
    "esbenp.prettier-vscode",

    // ESLint
    "dbaeumer.vscode-eslint",

    // Markdown linter
    "davidanson.vscode-markdownlint",

    // Makes cmd+d (select next occurrence) case-sensitive
    "jacobkantzer.case-sensitive-add-next",

    // Formats comments in code
    "stkb.rewrap",

    // Totally optional.  For the hardcores
    "vscodevim.vim",

    /**
     * Filetype support
     */
    "codezombiech.gitignore",
    "mikestead.dotenv",
    "ecmel.vscode-html-css",
    "mrmlnc.vscode-scss"
  ]
}
